<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CustomerDetail"
    android:background="@drawable/loginbackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <Button
            android:id="@+id/btn_back"
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_arrow_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Customer Detail"
            android:gravity="center"
            android:textSize="30dp"
            android:textColor="@color/black"
            />

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:background="@drawable/background_login_form"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/ic_person"/>
            <TextView
                android:id="@+id/customer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="name"
                android:textSize="30sp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:id="@+id/customer_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/customer_name"
                android:layout_margin="10dp"
                android:text="phone"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/customer_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/customer_name"
                android:layout_margin="10dp"
                android:text="email"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/customer_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/customer_email"
                android:layout_margin="10dp"
                android:text="address"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/customer_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/customer_address"
                android:layout_margin="10dp"
                android:text="status"
                android:textSize="30sp" />
        </LinearLayout>


    </LinearLayout>


</androidx.drawerlayout.widget.DrawerLayout>